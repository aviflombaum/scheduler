<% if cohort.users.include?(current_user) %>
  
  <%= link_to cohort.name, cohort_path(cohort) %> 

  <% if current_user.active_cohort != cohort %>
    
    <%= link_to "make active", user_cohort_path(cohort), remote: true, method: "patch", class: "btn btn-xs btn-primary" %>
  <% else %>
    <button class="btn btn-sm btn-info">active</button>
  <% end %>

<%else %>

  <%= link_to cohort.name, cohort_path(cohort) %>  <%= link_to "add cohort", user_cohorts_path(cohort_id: cohort.id), remote: true, method: "post", class: "btn btn-xs btn-primary" %>

<%end %>
