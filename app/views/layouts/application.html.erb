<!DOCTYPE html>
<html>
  <head>
    <title>FlatironScheduler</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>
  </head>

  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Flatiron Scheduler", root_path, class: "navbar-brand"%>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if current_user %>
        <ul class="nav navbar-nav">
            <li>
              <%= link_to "cohorts", cohorts_path%>
            </li>
            <li>
            <% if current_user.has_cohort %>
              <%= link_to "new schedule", new_cohort_schedule_path(current_user.active_cohort)%>
            </li>
            <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
              <%= link_to "log out", destroy_user_session_path, method: "delete" %>
            </li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>

  <body>
    <div class="container">

      <%= yield %>

    </div>
  </body>
</html>
